# .env.example

# Copy this file to ".env" and fill in real values locally.
# NEVER commit the real .env.

# --- App ---
RUNE_APP_NAME=rune
RUNE_APP_TITLE=rune

# --- Connector toggles ---
RUNE_CONSOLE_ENABLED=true
RUNE_MATRIX_ENABLED=false

# --- LLM / OpenRouter ---
# Get a key at OpenRouter and set it here:
RUNE_OPENROUTER_API_KEY=
RUNE_OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Comma-separated list; first working model will be used
RUNE_LLM_MODELS=x-ai/grok-4.1-fast:free,qwen/qwen-2.5-72b-instruct:free,deepseek/deepseek-chat-v3-0324:free

# Optional metadata headers (safe)
RUNE_HTTP_REFERER=https://example.com

# --- Matrix ---
RUNE_MATRIX_HOMESERVER=https://matrix.org
RUNE_MATRIX_USER_ID=@your_bot:matrix.org
# Required only for first login to create a local session file
RUNE_MATRIX_PASSWORD=
# Optional allowlist of room IDs (space/comma separated). Empty => all rooms
RUNE_MATRIX_ROOMS=

# --- Local data locations (all ignored by git) ---
RUNE_DATA_DIR=.local/rune
RUNE_MATRIX_STORE_PATH=.local/rune/matrix_store
RUNE_MEMORY_DB_PATH=.local/rune/memory.sqlite3
RUNE_DIALOG_HISTORY_PATH=.local/rune/dialog_histories.json
RUNE_TASKS_DB_PATH=.local/rune/tasks.sqlite3

# --- Logging ---
RUNE_LOG_LEVEL=INFO

# --- TTS (optional) ---
RUNE_SPEAKER_WAV=voice_sample.wav
RUNE_XTTS_SPEAKER_NAME=Ana Florence
RUNE_XTTS_LANGUAGE=ru

# --- Memory tuning (optional) ---
RUNE_MEMORY_MAX_USER=800
RUNE_MEMORY_MAX_ROOM=400
RUNE_MEMORY_MAX_REL=600
RUNE_MEMORY_MAX_GLOBAL=800

RUNE_MEMORY_PROMPT_LIMIT_USER=12
RUNE_MEMORY_PROMPT_LIMIT_REL=12
RUNE_MEMORY_PROMPT_LIMIT_ROOM=8
RUNE_MEMORY_PROMPT_LIMIT_GLOBAL=8
RUNE_MEMORY_PROMPT_LIMIT_GLOBAL_USERSTORIES=8

RUNE_MEMORY_CTRL_EVERY_N_MESSAGES=1
RUNE_MEMORY_CTRL_LAST_MESSAGES=8

RUNE_MEMORY_EPISODE_THRESHOLD_MESSAGES=20
RUNE_MEMORY_EPISODE_CHUNK_MESSAGES=24

RUNE_MEMORY_MAX_DIALOG_MESSAGES=80
